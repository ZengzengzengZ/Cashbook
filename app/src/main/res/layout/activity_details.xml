<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".Details" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="30dp" android:layout_width="match_parent" android:textSize="30sp" android:text="账单详情" android:gravity="center" android:layout_weight="1" android:id="@+id/tv_d_title"/>


    <LinearLayout android:orientation="vertical" android:layout_height="200dp" android:layout_width="match_parent" android:layout_weight="1">


    <RadioGroup android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/rg_d_type">

    <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:text="支出" android:layout_weight="1" android:id="@+id/rb_btn1"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:text="收入" android:layout_weight="1" android:id="@+id/rb_btn2"/>

</RadioGroup>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:text="标题" android:id="@+id/et_d_title" android:inputType="textPersonName" android:ems="10"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:text="钱数" android:id="@+id/et_d_money" android:inputType="textPersonName" android:ems="10"/>

    <DatePicker android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/dp_d_date" android:datePickerMode="spinner" android:calendarViewShown="false" android:layout_margin="4dp"/>

</LinearLayout>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="修改并返回" android:id="@+id/btn_d_change"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/blank"/>

</LinearLayout>